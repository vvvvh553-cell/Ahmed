<script>
  // يشاهده الآن
  function updateViewers() {
    const viewers = Math.floor(Math.random() * (60 - 15 + 1)) + 15;
    document.getElementById("viewerCount").innerText = viewers;
  }
  setInterval(updateViewers, 5000);

  // عداد تخفيض (مثال بسيط)
  function countdown(id, hours, minutes, seconds) {
    let total = (hours*3600 + minutes*60 + seconds);
    setInterval(function(){
      if(total<=0) return;
      total--;
      let h = String(Math.floor(total/3600)).padStart(2,'0');
      let m = String(Math.floor((total%3600)/60)).padStart(2,'0');
      let s = String(total%60).padStart(2,'0');
      document.getElementById(id).innerText = "العرض ينتهي بعد: "+h+":"+m+":"+s;
    },1000);
  }
  countdown("timer1",2,15,34);

  // Toast
  function showToast() {
    var x = document.getElementById("toast");
    x.className = "show";
    setTimeout(function(){ x.className = x.className.replace("show", ""); }, 3000);
  }

  // شراء الآن
  function buyNow(product){
    showToast();
    setTimeout(()=>{
      window.location.href="https://wa.me/212600000000?text=أريد%20شراء%20"+encodeURIComponent(product);
    },2000);
  }

  // مشاركة
  function shareWhatsApp(product){
    window.open("https://wa.me/?text="+encodeURIComponent("شاهد هذا المنتج: "+product));
  }
  function shareFB(product){
    window.open("https://www.facebook.com/sharer/sharer.php?u="+encodeURIComponent("https://example.com/"+product));
  }
</script>
